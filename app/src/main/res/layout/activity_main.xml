<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/correcto"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#00FE08"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/incorrecto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FC0000"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/reinicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="reinicio"
                    android:text="REINICIAR"
                    android:textSize="10sp" />
            </TableRow>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="Python"
                    app:srcCompat="@drawable/img_10" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="Java"
                    app:srcCompat="@drawable/img_11" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="csharp"
                    app:srcCompat="@drawable/img_12" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="cplusplus"
                    app:srcCompat="@drawable/img_13" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="JavaScript"
                    app:srcCompat="@drawable/img_14" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="PHP"
                    app:srcCompat="@drawable/img_15" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="HTML"
                    app:srcCompat="@drawable/img_16" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="CSS"
                    app:srcCompat="@drawable/img_17" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="procesar"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:tag="SQL"
                    app:srcCompat="@drawable/img_18" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>